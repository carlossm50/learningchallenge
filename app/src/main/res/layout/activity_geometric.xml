<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ItemBackground"
    android:orientation="vertical"
    tools:context="com.vladan.dragdropimages01.DragDropActivity">

    <LinearLayout
        android:id="@+id/panel2"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="414dp"
        android:background="@color/Item2Background"
        android:elevation="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/oval" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/square" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/triangle" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/star" />
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/heart" />
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/img_match"
        android:layout_width="189dp"
        android:layout_height="208dp"
        android:layout_below="@+id/my_toolbar"

        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="230dp"
        android:layout_toEndOf="@+id/panel1"
        android:layout_toRightOf="@+id/panel1"
        android:background="#FAFAFA"
        android:elevation="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/drop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/circle_bg" />

    </LinearLayout>

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="wrap_content"
        android:layout_height="31dp"

        android:layout_below="@+id/my_toolbar"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="-4dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#dd9d14"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/puntajeincorrecto"
        android:layout_width="wrap_content"
        android:layout_height="31dp"

        android:layout_below="@+id/my_toolbar"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="-1dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#dd9d14"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="216dp"
        android:layout_marginRight="216dp"
        app:srcCompat="@drawable/correcto_simbolo" />

    <ImageView
        android:id="@+id/incorecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        app:srcCompat="@drawable/incorrecto_simbolo" />

    <LinearLayout
        android:id="@+id/panel1"
        android:layout_width="77dp"
        android:layout_height="348dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="68dp"
        android:background="@color/Item2Background"
        android:elevation="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/circle" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/diamond" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/hexagon" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/pentagon" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="68dp"
            android:layout_height="68dp"
            app:srcCompat="@drawable/rectangle" />
    </LinearLayout>
</RelativeLayout>
